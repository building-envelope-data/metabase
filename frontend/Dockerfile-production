# Inspired by https://nextjs.org/docs/deployment#docker-image

FROM node:16.13-bullseye-slim AS dependencies
WORKDIR /app
COPY ./package.json ./yarn.lock ./
RUN yarn install --pure-lockfile

FROM node:16.13-bullseye-slim AS build
WORKDIR /app
COPY ./ ./
COPY --from=dependencies /app/node_modules ./node_modules
RUN yarn build

FROM node:16.13-bullseye-slim
WORKDIR /app
ENV NODE_ENV=production
COPY --from=build /app/.env.local ./
COPY --from=build /app/.next ./.next
COPY --from=build /app/next.config.js ./
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package.json ./
COPY --from=build /app/public ./public
RUN \
  apt-get update && \
  apt-get install \
    --yes \
    --no-install-recommends \
    wget && \
  rm \
    --recursive \
    --force \
    /var/lib/apt/lists/*
RUN npx --no-install next telemetry disable
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 --ingroup nodejs nextjs
RUN chown --recursive nextjs:nodejs /app/.next
USER nextjs
